<div class="container">
<h1 align="center">Iniciar sesión</h1><br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => 'form-horizontal') do |f| %>
  <div class="form-group">
    <%= f.label :correo_electrónico, class: "control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.email_field :email, autofocus: true, class: "form-control" %></div>
  </div><br>

  <div class="form-group">
    <%= f.label :contraseña, class: "control-label col-sm-2" %><br />
    <div class="col-sm-10"><%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :recordar_mis_datos %>
    </div>
  <% end %><br>

  <div class="actions">
    <%= f.submit "Entrar", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>