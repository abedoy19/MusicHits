<div style="width: 84%;margin:0 auto;">
<h1>Mis canciones</h1><br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Título</th>
      <th>Cantante</th>
      <th>Álbum</th>
      <th>Género</th>
    </tr>
  </thead>
  <tbody>
  	 <% @songs.each do |song| %>
    <tr>
      <td><%= song.name %></td>
      <td><%= song.singer %></td>
      <td><%= song.album %></td>
      <td><%= song.genre %></td>
      <td><%= song.year %></td>
      <td><%= link_to "Eliminar", song, method: :delete %></td>
      <td><%= link_to "Editar", edit_song_path(song) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div><%= link_to "Agregar", controller: "songs", action: "new" %></div>
</div>